<%= form_with(model: @post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.rich_text_area :body, id: :post_body, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Criar Post', class: 'btn btn-primary' %>
  </div>
<% end %>
